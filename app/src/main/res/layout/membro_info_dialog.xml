<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/nameDialogTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:text="Nome do Membro"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/phoneDialogTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="Número de contato: "
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/nameDialogTxt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameDialogTxt"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/callDialogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_call"
        app:layout_constraintLeft_toLeftOf="@+id/balanceDialogTxt"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/balanceDialogTxt" />

    <TextView
        android:id="@+id/emailDialogTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:text="e-mail:"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/phoneDialogTxt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneDialogTxt"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/closeDialogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:tint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/addBalanceBtn"
        app:layout_constraintLeft_toRightOf="@+id/addBalanceBtn"
        app:layout_constraintTop_toTopOf="@+id/addBalanceBtn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/atvsDialogTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Atividades Finalizadas:"
        app:layout_constraintLeft_toLeftOf="@+id/emailDialogTxt"
        app:layout_constraintTop_toBottomOf="@+id/emailDialogTxt" />

    <TextView
        android:id="@+id/balanceDialogTxt"
        android:layout_width="348dp"
        android:layout_height="17dp"
        android:layout_marginTop="14dp"
        android:text="Balanço:"
        app:layout_constraintLeft_toLeftOf="@+id/atvsDialogTxt"
        app:layout_constraintTop_toBottomOf="@+id/atvsDialogTxt" />

    <ImageButton
        android:id="@+id/addBalanceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@android:color/holo_green_light"
        app:srcCompat="@android:drawable/ic_input_add"
        app:layout_constraintTop_toTopOf="@+id/callDialogBtn"
        app:layout_constraintBottom_toBottomOf="@+id/callDialogBtn"
        app:layout_constraintLeft_toRightOf="@+id/callDialogBtn"
        android:layout_marginLeft="50dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="50dp" />

</android.support.constraint.ConstraintLayout>